# Configuration générale pour tous les fichiers (optionnel mais recommandé)
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Configuration spécifique pour les fichiers TOML
[*.toml]
indent_style = space
indent_size = 2